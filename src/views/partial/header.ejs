<header class="header">
  <div style="display: flex; align-items: center; gap: 1.2rem">
    <img src="/logo.png" alt="BurekaFlix" class="logo" />
    <span class="site-title">בורקפליקס</span>
  </div>

  <div class="right-buttons">
    <button
      class="<%= (activePage === 'catalog' ? 'selectedbutton' : 'headerbutton') %>"
      onclick="location.href='/catalog'"
    >
      דף הבית
    </button>
    <button
      class="<%= (activePage === 'stats' ? 'selectedbutton' : 'headerbutton') %>"
      onclick="location.href='/stats'"
    >
      סטטיסטיקות
    </button>
    <% if (locals.currentUser?.isAdmin) { %>
      <button
        class="<%= (activePage === 'admin' ? 'selectedbutton' : 'headerbutton') %>"
        onclick="location.href='/admin/add'"
      >
        הוספת תוכן (מנהל)
      </button>
    <% } %>
  </div>

  <div class="left-buttons">
    <button class="headerbutton" onclick="location.href='/profiles'">החלף צופה</button>
    <form method="post" action="/logout" style="display:inline; margin:0;">
      <button class="headerbutton" type="submit">התנתקות</button>
    </form>
  </div>
</header>
