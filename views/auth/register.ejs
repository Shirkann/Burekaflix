<main class="container" dir="rtl">
  <section class="hero">
    <h1 class="project-title">BurekaFlix</h1>
    <h2 class="screen-title">专砖</h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert"><%= error %></div>
    <% } %>

    <form class="row" action="/register" method="POST" novalidate>
      <% if (locals.csrfToken) { %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <% } %>

      <input
        type="email"
        name="email"
        placeholder="砖 砖转砖"
        required
        autocomplete="email"
      />
      <input
        type="password"
        name="password"
        placeholder="住住"
        required
        autocomplete="new-password"
      />
      <input
        type="password"
        name="confirmPassword"
        placeholder="砖专 住住"
        required
        autocomplete="new-password"
      />

      <button class="btn" type="submit">专砖</button>
    </form>

    <p class="form-links">
      专 砖  砖转砖?
      <a href="/login">住</a>
    </p>

    <p class="footnote">  拽注 砖专</p>
  </section>
</main>
