<% layout('layout') -%>

<section class="hero" aria-label="住 住">
  <h1 class="project-title">
    <%= typeof projectName !== 'undefined' ? projectName : 'BurekaFlix' %>
  </h1>
  <h2 class="screen-title">住</h2>

  <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert"><%= error %></div>
  <% } %>

  <form class="row" action="/login" method="post" autocomplete="on">
    <input
      type="text"
      name="email"
      placeholder="砖 砖转砖"
      autocomplete="username"
      inputmode="email"
      spellcheck="false"
      required
    />
    <input
      type="password"
      name="password"
      placeholder="住住"
      autocomplete="current-password"
      required
    />
    <button class="btn" type="submit">住</button>
  </form>

  <p class="info">  砖转砖? <a href="/register">专砖</a></p>
  <p class="info"> 拽注 砖专 </p>
</section>
