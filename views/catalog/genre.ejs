<% layout('layout') -%>

<h2><%= genre %></h2>

<div
  class="grid"
  style="display:grid; gap:12px; grid-template-columns:repeat(auto-fill, minmax(180px, 1fr))"
>
  <% items.forEach(i => { %>
    <a class="card" href="/content/<%= i._id %>">
      <img src="<%= i.posterUrl %>" />
      <div class="info">
        <h4><%= i.title %></h4>
        <div class="meta"><%= i.year %></div>
      </div>
    </a>
  <% }) %>
</div>
